{
  "model": "claude-3-5-sonnet-20241022",
  "permissions": {
    "allow": [
      "Read(./)",
      "Bash(uv run *)",
      "Bash(make *)",
      "Bash(pytest *)",
      "Bash(ruff *)",
      "Bash(black )"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.)",
      "Read(./secrets/)",
      "Bash(curl *)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/userprompt_inject_agents.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|Bash|Terminal|Shell",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pretool_require_agent.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/block-unless-approved.sh",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Bash|Terminal|Shell",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pretool_uv_gate.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/run-checks.sh",
            "timeout": 120
          }
        ]
      }
    ]
  }
}